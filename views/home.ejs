<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD (Creat, Read, Update, Delete)</title>
    <link rel="stylesheet" href="/css/style.css"/>
    <script src="/js/util.js"></script>
</head>

<body>
    <div>
    <h1>JSON CRUD (Creat, Read, Update, Delete)</h1>
    <a href="/add" class="create">Creat</a>
    <table>
        <thead>
            <tr>
                <th>No</th>
                <th>Name</th>
                <th>Height</th>
                <th>Weight</th>
                <th>Birth Date</th>
                <th>Is Married</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((value, index)=> { %>
                <% if(value.married) {%>
                    <% married = "Yes" %>
                        <tr>
                            <td>
                                <%= index + 1 %>
                            </td>
                            <td>
                                <%= value.name %>
                            </td>
                            <td>
                                <%= value.height %>
                            </td>
                            <td>
                                <%= value.weight %>
                            </td>
                            <td>
                                <%= value.birthdate %>
                            </td>
                            <td>
                                <%= married %>
                            </td>
                            <td><a href="/edit/<%= index %>">Update</a>&nbsp<a href="/delete/<%= index %>" onclick="return confirmation('<%= value.name %>')">Delete</a></td>
                        </tr>
                        <% } %>
                        <% if(!value.married) {%>
                            <% married = "Not Yet" %>
                                <tr>
                                    <td>
                                        <%= index + 1 %>
                                    </td>
                                    <td>
                                        <%= value.name %>
                                    </td>
                                    <td>
                                        <%= value.height %>
                                    </td>
                                    <td>
                                        <%= value.weight %>
                                    </td>
                                    <td>
                                        <%= value.birthdate %>
                                    </td>
                                    <td>
                                        <%= married %>
                                    </td>
                                    <td><a href="/edit/<%= index %>">Update</a>&nbsp<a href="/delete/<%= index %>" onclick="return confirmation('<%= value.name %>')">Delete</a></td>
                                </tr>
                            <% } %>      
            <% }) %>
        </tbody>
    </table>
</div>
</body>

</html>